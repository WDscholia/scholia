#defaultView:BubbleChart
SELECT ?score ?author ?authorLabel
WITH {
  SELECT
    (SUM(?score_) AS ?score)
    ?author
  WHERE {
    { 
      ?author wdt:P101/wdt:P279* wd:{{ q }} .
      BIND(20 AS ?score_)
    }
    UNION
    {
      SELECT (3 AS ?score_) ?author WHERE {
        ?work wdt:P50 ?author ;
              wdt:P921/wdt:P279* wd:{{ q }} . 
      }
    }
    UNION
    {
      SELECT (1 AS ?score_) ?author WHERE {
        ?cited_work wdt:P50 ?author .
        ?citing_work wdt:P2860 ?cited_work .
        ?citing_work wdt:P921/wdt:P279* wd:{{ q }} . 
      }
    }
  }
  GROUP BY ?author
} AS %results 
WHERE {
  INCLUDE %results
  SERVICE wikibase:label { bd:serviceParam wikibase:language "{{ g.lang_code }},[AUTO_LANGUAGE],en,da,de,es,jp,no,ru,sv,zh". }
}
ORDER BY DESC(?score)
LIMIT 200
